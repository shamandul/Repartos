<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="es.jspsoluciones.repartos.clientes.EditarDatosClientesFragment"
        android:orientation="vertical"
        android:background="@color/lightBlue_50">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/txt_clientes"
            android:id="@+id/textView2"
            android:textColor="@color/fondo" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View android:layout_height="2dip" android:layout_width="wrap_content"
                android:background="@color/colorAceptar" />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listaElementoClientesMostrar" />
        </LinearLayout>

    </LinearLayout>